@model UserViewModel

@{
    ViewBag.Title = "User Detail";
}

<h1>User Detail</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Gender</th>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Age</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.Role</td>
    </tr>
    <tr>
        <th>Photo</th>
        <td><img src="/photos/@Model.PhotoURL"></td>
    </tr>
</table>
<br />
     <button data-get="/AccountMaintenance/UpdateProfile/@Model.Id">Update</button>
     <button data-post="/AccountMaintenance/Delete/@Model.Id">Delete</button>