@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<User>

@{
    ViewBag.Title = "User List";
    string[] fields = { "Id", "Name", "Gender", "Age", "Role" };
}

<form>
    @Html.TextBox("name", null, new { autofocus = "" })
    @Html.Hidden("sort")
    @Html.Hidden("dir")
    @Html.Hidden("role")
</form>

