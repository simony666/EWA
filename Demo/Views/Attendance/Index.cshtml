@model ClassesVM

@{
    ViewBag.Title = "Attendance | Dashboard";
    IEnumerable<Class> classes = ViewBag.Classes;
}

 <p>@classes.Count() record(s)</p> 

<table class="table">
    <tr>
        <th>Classes Id</th>
        <th>Classes Name</th>
        <th>Attendance</th>
        <th>View</th>
    </tr>
    @foreach (var c in classes)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.Name</td>
            <td>Attendance</td>
            <td>
                <button data-post="/Attendance/Detail/@c.Id">View</button>
            </td>
        </tr>
    }
</table>